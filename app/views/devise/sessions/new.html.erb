<div class="col-lg-12" id="main-body">
  <div class="sign-in-form col-md-4">
    <div class="sign_in">
      <h2>Sign in</h2>

      <%= form_for("user", url: user_session_path) do |f| %>
  <div class="field">
    <%= f.email_field :email, autofocus: true, placeholder: "email" %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "off", placeholder: "password" %>
  </div>

  <div class="field">
    <%= f.check_box :remember_me %>
    <%= f.label :remember_me %>
  </div>

  <div class="actions">
    <%= f.submit "Sign in" %>
  </div>
<% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>